// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  // Optional for WebAuthn support
  // expenses      Expense[]
  // auth          Auth?
  expenses      Expense[]
  Company       Company?  @relation(fields: [companyId], references: [id])
  companyId     Int?
}

model Expense {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  value     Float
  type      String
  Company   Company? @relation(fields: [companyId], references: [id])
  companyId Int?
}

model Company {
  id        Int       @id @default(autoincrement())
  name      String
  users     User[]
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

